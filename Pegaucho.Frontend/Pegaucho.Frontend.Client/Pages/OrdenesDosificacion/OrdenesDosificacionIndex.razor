@page "/Dosificacion"
@using Pegaucho.Shared.DTOs
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar

<style>
    body {
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
    }

    .header-container {
        background-color: #3e3e9f;
        color: white;
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .header-content {
        display: flex;
        align-items: center;
        gap: 1rem;
        width: 100%;
        justify-content: space-between;
    }

    .header-left {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .header-title {
        font-size: 2rem;
        font-weight: 400;
        margin: 0;
    }

    .dropbox-icon {
        width: 40px;
        height: 40px;
        color: white;
    }

    .user-icon {
        width: 35px;
        height: 35px;
        color: white;
    }

    .page-title {
        text-align: center;
        font-size: 2rem;
        font-weight: 300;
        color: #363636;
        margin-bottom: 2rem;
    }

    .search-container {
        padding: 0 2rem;
        margin-bottom: 1.5rem;
    }

    .search-label {
        font-weight: 600;
        color: #363636;
        margin-bottom: 0.5rem;
    }

    .datos-producto-card {
        background-color: #c8c8c8;
        padding: 1.5rem;
        margin: 0 2rem 1.5rem 2rem;
        border-radius: 4px;
    }

    .datos-header {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        color: #363636;
    }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 200px;
        gap: 1.5rem;
        align-items: end;
    }

    .form-row-2 {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 200px;
        gap: 1.5rem;
        align-items: end;
        margin-top: 1rem;
    }

    .form-field label {
        display: block;
        font-size: 0.875rem;
        font-weight: 500;
        color: #363636;
        margin-bottom: 0.3rem;
    }

    .button-column {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .table-container {
        margin: 0 2rem;
        border: 2px solid #3e3e9f;
        border-radius: 4px;
        overflow: hidden;
        background-color: #c8c8c8;
    }

    .scroll-indicators {
        display: flex;
        justify-content: space-between;
        padding: 0 2rem;
        margin-top: 0.5rem;
        color: #666;
        font-size: 1.5rem;
    }

    .action-buttons {
        display: flex;
        justify-content: space-between;
        padding: 0 2rem;
        margin-top: 1.5rem;
        margin-bottom: 2rem;
    }

    .btn-group-right {
        display: flex;
        gap: 1rem;
    }

    .btn-primary {
        background-color: #3e3e9f !important;
        color: white !important;
        
    }

    .btn-secondary {
        background-color: #6c757d !important;
        color: white !important;
    }


    @@media (max-width: 1200px) {
        .form-grid,
        .form-row-2 {
            grid-template-columns: 1fr 1fr;
        }

        .button-column {
            grid-column: span 2;
            flex-direction: row;
        }
    }
</style>

<div class="header-container">
    <div class="header-content">
        <div class="header-left">
            <svg class="dropbox-icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M6 2L0 6l6 4 6-4-6-4zm12 0l-6 4 6 4 6-4-6-4zM0 14l6 4 6-4-6-4-6 4zm18 0l-6 4 6 4 6-4-6-4z" />
            </svg>
            <h1 class="header-title">Preflex línea Pegaucho</h1>
        </div>
        <div>
            <svg class="user-icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
            </svg>
        </div>
    </div>
</div>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Style="padding: 0;">
    <h2 class="page-title">Dosificación</h2>

    <!-- Búsqueda -->
    <div class="search-container">
        <div class="search-label">Buscar:</div>
        <MudTextField @bind-Value="busqueda"
                      Placeholder="Cédula, nombre..."
                      Variant="Variant.Outlined"
                      Adornment="Adornment.End"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      Margin="Margin.Dense"
                      Style="max-width: 300px; background-color: white;" />
    </div>

    <!-- Datos del producto -->
    <div class="datos-producto-card">
        <div class="datos-header">Datos del producto:</div>

        <div class="form-grid">
            <div class="form-field">
                <label>Código producto:</label>
                <MudNumericField @bind-Value="dosificacion.CodigoProducto"
                                 Variant="Variant.Outlined"
                                 Margin="Margin.Dense"
                                 Style="background-color: white;" />
            </div>

            <div class="form-field">
                <label>Cantidad:</label>
                <MudNumericField @bind-Value="dosificacion.Cantidad"
                                 Variant="Variant.Outlined"
                                 Margin="Margin.Dense"
                                 Style="background-color: white;" />
            </div>

            <div class="form-field">
                <label>Prioridad:</label>
                <MudTextField @bind-Value="dosificacion.Prioridad"
                              Variant="Variant.Outlined"
                              Margin="Margin.Dense"
                              Style="background-color: white;" />
            </div>

            <div class="button-column">
                <MudButton Variant="Variant.Filled"
                           Class="btn-primary"
                           FullWidth="true"
                           OnClick="AgregarProducto">
                    Agregar producto
                </MudButton>
            </div>
        </div>

        <div class="form-row-2">
            <div class="form-field">
                <label>Maquinaria:</label>
                <MudSelect @bind-Value="dosificacion.Maquinaria"
                           Variant="Variant.Outlined"
                           Margin="Margin.Dense"
                           Style="background-color: white;">
                    <MudSelectItem Value="@("")">Seleccione...</MudSelectItem>
                    <MudSelectItem Value="@("pistón")">pistón</MudSelectItem>
                    <MudSelectItem Value="@("peristáltica")">peristáltica</MudSelectItem>
                    <MudSelectItem Value="@("volumétrica")">volumétrica</MudSelectItem>
                    <MudSelectItem Value="@("gravimétrica")">gravimétrica</MudSelectItem>
                </MudSelect>
            </div>

            <div class="form-field">
                <label>Material de empaque:</label>
                <MudTextField @bind-Value="dosificacion.MaterialEmpaque"
                              Variant="Variant.Outlined"
                              Margin="Margin.Dense"
                              Style="background-color: white;" />
            </div>

            <div class="form-field">
                <label>Tiempo estimado:</label>
                <MudTextField @bind-Value="dosificacion.TiempoEstimado"
                              Variant="Variant.Outlined"
                              Margin="Margin.Dense"
                              Style="background-color: white;" />
            </div>

            <div class="button-column">
                <MudButton Variant="Variant.Filled"
                           Class="btn-primary"
                           FullWidth="true"
                           OnClick="EliminarProducto">
                    Eliminar producto
                </MudButton>
            </div>
        </div>
    </div>

    <!-- Tabla -->
    <div class="table-container">
        <MudTable Items="@productos"
                  Hover="true"
                  Striped="true"
                  Dense="true"
                  Style="background-color: #c8c8c8;">
            <HeaderContent>
                <MudTh Style="background-color: #3e3e9f; color: white; text-align: center;">Código</MudTh>
                <MudTh Style="background-color: #3e3e9f; color: white; text-align: center;">Producto</MudTh>
                <MudTh Style="background-color: #3e3e9f; color: white; text-align: center;">Cantidad</MudTh>
                <MudTh Style="background-color: #3e3e9f; color: white; text-align: center;">Material empaque</MudTh>
                <MudTh Style="background-color: #3e3e9f; color: white; text-align: center;">Maquinaria</MudTh>
                <MudTh Style="background-color: #3e3e9f; color: white; text-align: center;">Tiempo estimando</MudTh>
                <MudTh Style="background-color: #3e3e9f; color: white; text-align: center;">costos</MudTh>
                <MudTh Style="background-color: #3e3e9f; color: white; text-align: center;">Fecha</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Código" Style="text-align: center;">@context.CodigoProducto</MudTd>
                <MudTd DataLabel="Producto" Style="text-align: center;">@context.Nombre</MudTd>
                <MudTd DataLabel="Cantidad" Style="text-align: center;">@context.Cantidad</MudTd>
                <MudTd DataLabel="Material empaque" Style="text-align: center;">@context.MaterialEmpaque</MudTd>
                <MudTd DataLabel="Maquinaria" Style="text-align: center;">@context.Maquinaria</MudTd>
                <MudTd DataLabel="Tiempo estimando" Style="text-align: center;">@context.TiempoEstimado</MudTd>
                <MudTd DataLabel="costos" Style="text-align: center;">@context.Costo</MudTd>
                <MudTd DataLabel="Fecha" Style="text-align: center;">@context.Fecha.ToString("dd/MM/yyyy")</MudTd>
            </RowTemplate>
        </MudTable>
    </div>

    

    <!-- Botones de acción -->
    <div class="action-buttons">
        <MudButton Variant="Variant.Filled"
                   Class="btn-primary"
                   Size="Size.Large"
                   Style="min-width: 150px;"
                   OnClick="Regresar">
            Regresar
        </MudButton>

        <div class="btn-group-right">
            <MudButton Variant="Variant.Filled"
                       Class="btn-primary"
                       Size="Size.Large"
                       Style="min-width: 150px;"
                       OnClick="GenerarOrden"
                       Disabled="@loading">
                @if (loading)
                {
                    <MudProgressCircular Size="Size.Small" Indeterminate="true" />
                }
                else
                {
                    <span>Generar orden</span>
                }
            </MudButton>

            <MudButton Variant="Variant.Filled"
                       Class="btn-secondary"
                       Size="Size.Large"
                       Style="min-width: 150px;"
                       OnClick="Cancelar">
                Cancelar
            </MudButton>
        </div>
    </div>
</MudContainer>

@code {
    private DosificacionDTO dosificacion = new();
    private List<DosificacionDTO> productos = new();
    private string busqueda = "";
    private bool loading = false;

    private void AgregarProducto()
    {
        if (dosificacion.CodigoProducto > 0 && dosificacion.Cantidad > 0)
        {
            var nuevoProducto = new DosificacionDTO
                {
                    CodigoProducto = dosificacion.CodigoProducto,
                    Nombre = "Producto " + dosificacion.CodigoProducto,
                    Cantidad = dosificacion.Cantidad,
                    Prioridad = dosificacion.Prioridad,
                    Maquinaria = dosificacion.Maquinaria,
                    MaterialEmpaque = dosificacion.MaterialEmpaque,
                    TiempoEstimado = dosificacion.TiempoEstimado,
                    Costo = 0,
                    Fecha = DateTime.Now
                };

            productos.Add(nuevoProducto);
            LimpiarFormulario();
            Snackbar.Add("Producto agregado a la lista", Severity.Success);
        }
        else
        {
            Snackbar.Add("Complete los campos requeridos", Severity.Warning);
        }
    }

    private void EliminarProducto()
    {
        if (productos.Any())
        {
            productos.RemoveAt(productos.Count - 1);
            Snackbar.Add("Último producto eliminado", Severity.Info);
        }
        else
        {
            Snackbar.Add("No hay productos para eliminar", Severity.Warning);
        }
    }

    private void GenerarOrden()
    {
        if (!productos.Any())
        {
            Snackbar.Add("Agregue al menos un producto antes de generar la orden", Severity.Warning);
            return;
        }

        loading = true;
        try
        {
            // Aquí implementar la lógica para guardar en BD
            Snackbar.Add("✓ Orden de dosificación generada exitosamente", Severity.Success);
            productos.Clear();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error al generar orden: {ex.Message}", Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }

    private void LimpiarFormulario()
    {
        dosificacion = new DosificacionDTO();
    }

    private void Regresar()
    {
        NavigationManager.NavigateTo("/Dashboard");
    }

    private void Cancelar()
    {
        productos.Clear();
        LimpiarFormulario();
        Snackbar.Add("Operación cancelada", Severity.Info);
    }

    // Clase DTO temporal (deberás crear esta clase en tu proyecto Shared/DTOs)
    public class DosificacionDTO
    {
        public int CodigoProducto { get; set; }
        public string Nombre { get; set; } = "";
        public int Cantidad { get; set; }
        public string Prioridad { get; set; } = "";
        public string Maquinaria { get; set; } = "";
        public string MaterialEmpaque { get; set; } = "";
        public string TiempoEstimado { get; set; } = "";
        public decimal Costo { get; set; }
        public DateTime Fecha { get; set; }
    }
}